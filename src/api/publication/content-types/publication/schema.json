{
  "kind": "collectionType",
  "collectionName": "publications",
  "info": {
    "singularName": "publication",
    "pluralName": "publications",
    "displayName": "Publication"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "LongDescription": {
      "type": "text",
      "required": true
    },
    "Authors": {
      "type": "component",
      "component": "components.publication-author",
      "repeatable": true,
      "required": true,
      "min": 1
    },
    "Date": {
      "type": "date",
      "required": true
    },
    "Link": {
      "type": "string",
      "required": true
    },
    "Tags": {
      "type": "component",
      "component": "components.tag",
      "repeatable": true
    },
    "Type": {
      "type": "enumeration",
      "required": true,
      "default": "Journal Article",
      "enum": [
        "Journal Article",
        "Conference Paper",
        "Book",
        "Book Chapter",
        "Report",
        "Thesis"
      ]
    },
    "Lab": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::lab.lab"
    }
  }
}
