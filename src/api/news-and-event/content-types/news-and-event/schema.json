{
  "kind": "collectionType",
  "collectionName": "news_and_events",
  "info": {
    "singularName": "news-and-event",
    "pluralName": "news-and-events",
    "displayName": "News&Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "News",
        "Event"
      ]
    },
    "Date": {
      "type": "date",
      "required": true
    },
    "Title": {
      "type": "string",
      "required": true
    },
    "Description": {
      "type": "text",
      "required": true
    },
    "CoverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "Content": {
      "type": "blocks",
      "required": true
    }
  }
}
